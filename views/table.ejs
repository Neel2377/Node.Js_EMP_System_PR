<!doctype html>
<html lang="en">

<head>
  <title>Employee List</title>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>
<style>
  body {
    background-color: #f9fafb;
    font-family: 'Segoe UI', sans-serif;
    margin: 0;
  }

  h1 {
    font-size: 1.8rem;
    font-weight: bold !important;
    text-decoration: underline !important;
    color: #333;
    margin-top: 30px !important;
  }


  th {
    background-color: #DDDAD0 !important;
    font-weight: bold;
    color: #3c4a89 !important;
    font-size: large;
  }

  td,
  th {
    vertical-align: middle !important;
  }

  .btn-sm {
    padding: 4px 10px;
    font-size: 0.85rem;
  }

  .badge {
    font-size: 0.75rem;
    padding: 6px 8px;
    border-radius: 4px;
  }

  .badge.bg-danger {
    background-color: #dc3545;
  }

  .badge.bg-warning {
    background-color: #ffc107;
    color: #212529;
  }

  .badge.bg-success {
    background-color: #28a745;
  }

  .text-muted {
    font-size: 0.9rem;
  }
</style>


<body>
  <%- include('header1.ejs')%>

    <div class="container">
      <h1 class="text-center mb-4 text-black">EMPLOYEE LIST</h1>
      <div class="row">
        <div class="col-md-12 mx-auto table-responsive table-responsive-fixed">
          <table class="table table-bordered border border-2 border-black table-hover text-center">
            <thead>
              <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>DEPARTMENT</th>
                <th>SALARY</th>
                <th>TASK</th>
                <th>PRIORITY</th>
                <th>DESCRIPTION</th>
                <th>ACTION</th>
              </tr>
            </thead>
            <tbody class="table-group-divider table-responsive table-responsive-fixed" action="/employee/task/:id">
              <% employees.map((employee, index)=> { %>
                <tr>
                  <td class="fw-bold text-black">
                    <%= index + 1 %>
                  </td>
                  <td class="fw-bold text-black">
                    <%= employee.ename %>
                  </td>
                  <td class="fw-bold text-black">
                    <%= employee.department %>
                  </td>
                  <td class="fw-bold text-black">
                    <%= employee.salary %>
                  </td>
                  <td class="fw-bold text-black">
                    <%= employee.task %>
                  </td>
                  <td class="fw-bold text-black">
                    <% if (employee.priority==='high' ) { %>
                      <span class="badge bg-danger">High</span>
                      <% } else if (employee.priority==='medium' ) { %>
                        <span class="badge bg-warning text-dark">Medium</span>
                        <% } else if (employee.priority==='low' ) { %>
                          <span class="badge bg-success">Low</span>
                          <% } %>
                  </td>
                  <td class="fw-bold text-black">
                    <%= employee.description %>
                  </td>
                  <td>
                    <a href="/employee/delete/<%= employee.id %>" class="btn btn-danger btn-sm fw-bold mb-1">Delete</a>
                    <a href="/employee/edit/<%= employee.id %>" class="btn btn-warning btn-sm fw-bold mb-1">Edit</a>
                    <a href="/employee/task/<%= employee.id %>" class="btn btn-success btn-sm fw-bold mb-1">Task</a>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"></script>
</body>

</html>