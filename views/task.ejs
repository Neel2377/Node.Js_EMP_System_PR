<!DOCTYPE html>
<html lang="en">

<head>
  <title>Task Add</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Glassmorphism CSS -->
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;

    }

    h2 {
      text-align: center;
      font-weight: bold !important;
      text-decoration: underline !important;
      margin-bottom: 20px;
      color: #333;
    }

    .task {
      border: 3px solid grey !important;
      border-radius: 15px;
      padding: 10px 22px 10px 22px;
      background-color: #DDDAD0 !important;
    }

    .form-label {
      font-weight: 500;
    }

    .form-control:disabled {
      background-color: #f5f5f5;
    }

    .btn-task {
      background-color: rgb(6, 178, 6) !important;
      color: white !important;
      border: 1px solid black !important;
    }

    .btn-cancel {
      background-color: red !important;
      color: white !important;
      border: 1px solid black !important;
    }
  </style>
</head>

<body>

  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <h2>TASK ADD</h2>
        <form action="/employee/task/<%= employee.id %>" method="POST" class="task">
          <div class="mb-3">
            <label for="empname" class="form-label fw-bold">Name:</label>
            <input type="text" name="ename" id="empname" class="form-control border border-1 border-secondary"
              value="<%= employee.ename %>" disabled>
          </div>

          <div class="mb-3">
            <label for="department" class="form-label fw-bold">Department:</label>
            <input type="text" name="department" id="department" class="form-control border border-1 border-secondary"
              value="<%= employee.department %>" disabled>
          </div>

          <div class="mb-3">
            <label for="salary" class="form-label fw-bold">Salary:</label>
            <input type="number" name="salary" id="salary" class="form-control border border-1 border-secondary"
              value="<%= employee.salary %>" disabled>
          </div>

          <div class="mb-3">
            <label for="task" class="form-label fw-bold">Task:</label>
            <input type="text" name="task" id="task" class="form-control border border-1 border-secondary"
              value="<%= employee.task %>" required>
          </div>

          <form action="/employee/task/<%= employee.id %>" method="POST">
            <div class="mb-3">
              <label for="priority" class="form-label fw-bold">Priority:</label>
              <select class="form-select border border-1 border-secondary" id="priority" name="priority" required>
                <option value="">Select Priority</option>
                <option value="low">Low</option>
                <option value="medium">Medium</option>
                <option value="high">High</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label fw-bold">Description:</label>
              <textarea class="form-control border border-1 border-secondary" id="description" rows="3"
                name="description" required></textarea>
            </div>

            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-task">Task Assign</button>
              <a href="/table" class="btn btn-cancel">Cancel</a>
            </div>
          </form>

        </form>
      </div>
    </div>
  </div>


  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>