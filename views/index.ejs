<!doctype html>
<html lang="en">

<head>
  <title>Employee Add</title>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <style>
    body {
      background-color: #f9f9f9;
      font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif !important;
    }

    .form {
      border: 3px solid gray;
      border-radius: 15px;
      padding: 24px;
      background-color: #DDDAD0 !important;
      margin-top: 30px;
    }

    h1 {
      font-size: 1.8rem;
      font-weight: bold !important;
      text-decoration: underline !important;
      text-align: center;
      margin-top: 30px !important;
      color: #333;
    }

    .form-label {
      font-weight: 500;
      color: #000000;
    }

    .form-control {
      border-radius: 6px;
      font-size: 15px;
    }

    .btn-primary {
      width: 100%;
      font-weight: 500;
      background-color: #0d6efd;
      border: none;
    }

    .btn-primary:hover {
      background-color: #0b5ed7;
    }
  </style>
</head>

<body>
  <%- include('header.ejs')%>

    <div class="container">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <h1>ADD EMPLOYEE</h1>
          <form class="form" action="" method="post">
            <div class="mb-3">
              <label for="empid" class="form-label fw-bold">Employee ID:</label>
              <input type="number" class="form-control border border-1 border-secondary" id="empid" name="id"
                placeholder="Id" required />
            </div>

            <div class="mb-3">
              <label for="empname" class="form-label fw-bold">Employee Name:</label>
              <input type="text" class="form-control border border-1 border-secondary" id="empname" name="ename"
                placeholder="Name" required />
            </div>

            <div class="mb-3">
              <label for="department" class="form-label fw-bold">Employee Department:</label>
              <input type="text" class="form-control border border-1 border-secondary" id="department" name="department"
                placeholder="Department" required />
            </div>

            <div class="mb-3">
              <label for="salary" class="form-label fw-bold">Employee Salary:</label>
              <input type="number" class="form-control border border-1 border-secondary" id="salary" name="salary"
                placeholder="Salary" required />
            </div>

            <div class="mb-3 text-end">
              <button class="btn btn-primary fw-bold border border-3 border-secondary">Add Employee</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"></script>
</body>

</html>